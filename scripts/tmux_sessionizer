#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(fd . --min-depth 1 --max-depth 1 --type directory ~ ~/projects ~/study ~/dotfiles/config 2> /dev/null | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

tmux_running=$(pgrep tmux)
selected_name=$(basename "$selected" | tr . _)
# We're inverting the return code,
# not the actual value of has-session here.
if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected 2> /dev/null
fi

if [[ -n $TMUX ]]; then
    tmux switch-client -t $selected_name > /dev/null
else
    tmux attach-session -t $selected_name > /dev/null
fi
